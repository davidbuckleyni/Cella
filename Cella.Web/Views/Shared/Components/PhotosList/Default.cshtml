@model IEnumerable< Cella.Models.Photos>

<div class="row">
    <div class="col-lg-12">

        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">Photos</h3>
                <p></p>

            </div>

            <!-- /.card-header -->
            <div class="card-body">

                <table id="example" class="display table table-striped dataTable" style="width:100%">
                    <thead>
                        <tr>
                            <th>

                                <a class="btn btn-sm btn-primary" asp-action="Create" asp-controller="Notes">
                                    Add New Photo
                                </a>
                                
                            </th>


                        </tr>
                        <tr>
                            <th>Description</th>                            
                            <th>Photo</th>
                            
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>

    @foreach (var photos in Model) {
        <tr>
            <td>@photos.Description</td>
            <td>@photos.Filename</td>            
            <td>

              
                <a asp-controller="Notes" class="btn btn-success" asp-action="Edit" asp-route-id="@photos.Id">Edit </a>

                | <a href="#" class="btn btn-success" data-id="@photos.Id" onclick="deleteModal(@photos.Id)" data-toggle="modal" data-target="#deleteLink"><i class="glyphicon glyphicon-trash"></i>Delete </a>





            </td>
        </tr>
    }


                    </tbody>

                </table>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">

            </div>
            <!-- /.card-footer-->
        </div>
        <!-- /.card -->

    </div>
</div>





